root = true

[*]
trim_trailing_whitespace = true
end_of_line = lf
indent_style = space
indent_size = 2
charset = utf-8
insert_final_newline = true

[*.{js,css}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.html]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
